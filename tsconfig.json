{
  "include": ["src", "tests"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "module": "commonjs",
    "target": "ES5",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false
  }
}
